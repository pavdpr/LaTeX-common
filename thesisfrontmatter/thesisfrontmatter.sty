\newcommand*{\makeproposaldeclaration}{
    \thispagestyle{empty}
    \setcounter{page}{1}
    \setlength{\topskip}{2cm}
    \begin{center}
        \renewcommand{\baselinestretch}{1.0}
        \fontsize{14.4}{20}\selectfont
        \@degreetitle \\
        \vspace{0.8cm}
        \fontsize{12}{20}\selectfont
        by \\
        \vspace{0.8cm}
        \@degreeauthor \\
        \vspace{1cm}
        A \kind ~proposal submitted in partial fulfillment of the \\
        requirements for the degree of \kindspelledout \\
        in the Chester F.\ Carlson Center for Imaging Science \\
        College of Science \\
        Rochester Institute of Technology \\
        \bigskip
        \@degreedate
        \vspace{1cm}
    \end{center}
}

